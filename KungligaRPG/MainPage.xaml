<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Models="clr-namespace:KungligaRPG.Models"
             x:Class="KungligaRPG.MainPage"
             BackgroundColor="#323232">

    <ContentPage.Resources>
        <Color x:Key="SectionsColor">#444444</Color>
        <Color x:Key="LightFont">#FFFFFF</Color>
        <Color x:Key="DarkFont">#86d2d7</Color>
    </ContentPage.Resources>

    <VerticalStackLayout>
        <Label  x:Name="name"
                Text=""
                TextColor="{StaticResource LightFont}"/>
        <Label  x:Name="physique"
                Text=""
                TextColor="{StaticResource LightFont}"/>
        <Label  x:Name="dexterity"
                Text=""
                TextColor="{StaticResource LightFont}"/>
        <Label  x:Name="mentality"
                Text=""
                TextColor="{StaticResource LightFont}"/>
        <Label  x:Name="charisma"
                Text=""
                TextColor="{StaticResource LightFont}"/>
        <Label  x:Name="health"
                Text=""
                TextColor="{StaticResource LightFont}"/>
        <Label  x:Name="energy"
                Text=""
                TextColor="{StaticResource LightFont}"/>
        <Label  x:Name="actionPts"
                Text=""
                TextColor="{StaticResource LightFont}"/>
    </VerticalStackLayout>

</ContentPage>
